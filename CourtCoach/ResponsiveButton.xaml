<UserControl
    x:Class="CourtCoach.ResponsiveButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CourtCoach"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="200">

    <Grid>
        <Button x:Name="btn" VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch" CornerRadius="15"
                BorderThickness="4" Click="Button_Click">
            <Viewbox MaxHeight="{x:Bind _maxTextHeight}" MinHeight="{x:Bind _minTextHeight}" 
                     Margin="10">
                <TextBlock x:Name="txt" Text="{x:Bind _text}"/>
            </Viewbox>
        </Button>
    </Grid>
</UserControl>
