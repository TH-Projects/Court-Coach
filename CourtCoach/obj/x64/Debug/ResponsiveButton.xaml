<UserControl x:ConnectionId='1'
    x:Class="CourtCoach.ResponsiveButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CourtCoach"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="200">

    <Grid>
        <Button x:ConnectionId='2' x:Name="btn" VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch" CornerRadius="15"
                BorderThickness="4"                     >
            <Viewbox x:ConnectionId='3'                                                                         
                     Margin="10">
                <TextBlock x:ConnectionId='4' x:Name="txt"                      />
            </Viewbox>
        </Button>
    </Grid>
</UserControl>

