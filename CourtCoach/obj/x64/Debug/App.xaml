<Application
    x:Class="CourtCoach.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CourtCoach"
    >

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!--Button Design-->
            <SolidColorBrush x:Key="ButtonBackground" Color="#FFF6F6F6" Opacity="0.5"/>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFF6F6F6" Opacity="0.6"/>
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FFF6F6F6" Opacity="0.6"/>
            <SolidColorBrush x:Key="ButtonBorderBrush" Color="#ff4d00"/>
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#ff4d00"/>
            <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#ff4d00"/>
            <!--Button Design-->
            
            
        </ResourceDictionary>
    </Application.Resources>

</Application>

